mixin search
    section(id="search-section" class="jumbotron")
        form(action="/search" method="get")
            div(class="container")
                div(class="row")
                    div(class="col-sm-6 form-group")
                        label(for="search-field") Search
                        input(id="search-field" class="form-control" type="search" name="search" placeholder="Enter Your Search")
                    div(class="col-sm-6 form-group")
                        label(for="date-field") Search After
                        input(id="date-field" class="form-control" type="date" name="search")
                button(class="btn btn-primary") Search